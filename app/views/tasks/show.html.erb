<div class="container text-center">
  <h1>TASKS MANAGER</h1>
  <br>
  <h3><b>Task name: </b><%= @task.name %><h3>
  <h3><b>When: </b><%= @task.when %><h3>
  <ul class="list-inline">
    <li><h5><%= link_to "Edit this task", edit_task_path(@task) %></h5></li>
    <li>
      <h5><%= link_to "Delete this task", task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure?" } %></h5>
    </li>
  </ul>
  <br>
  <h3><%= link_to "Back to index", tasks_path %><h4>
</div>
